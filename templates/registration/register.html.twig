{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_errors(registrationForm) }}

		{% if noAdmin %}
			<p class="lead text-warning"><span class="text-danger">Attention</span> : CinéScope nécéssite d'être initialisé avec au moins un compte administrateur.<br>
            Pour cela le premier compte crée sera l'administrateur du système.
			</p>
		{% endif %}

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-lg btn-primary">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
